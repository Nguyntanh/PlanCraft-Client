PORT=5000                    # Port chạy server
NODE_ENV=development         # Môi trường (development/production)

DB_HOST=localhost           # Host của database
DB_USER=root               # Username database
DB_PASSWORD=your_password  # Password database
DB_NAME=plancraft_db      # Tên database
DB_PORT=3306              # Port database

JWT_SECRET=your_jwt_secret_key_here  # Secret key để tạo JWT token
JWT_EXPIRES_IN=24h                   # Thời gian hết hạn của token

EMAIL_HOST=smtp.gmail.com           # SMTP server
EMAIL_PORT=587                      # SMTP port
EMAIL_USER=your_email@gmail.com     # Email để gửi
EMAIL_PASS=your_app_password        # App password (nếu dùng Gmail)
EMAIL_FROM=your_email@gmail.com     # Email người gửi
APP_URL=http://localhost:5000       # URL của ứng dụng
CORS_ORIGIN=http://localhost:3000   # URL của frontend

#optional có thể bỏ
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-southeast-1
AWS_BUCKET_NAME=your_bucket_name